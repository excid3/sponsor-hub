{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.0.1",
    "@popperjs/core": "^2.10.2",
    "@rails/request.js": "^0.0.5",
    "bootstrap": "^5.1.3",
    "esbuild": "^0.13.9",
    "esbuild-rails": "^1.0.3",
    "expose-loader": "^3.1.0",
    "local-time": "^2.1.0",
    "sass": "^1.43.4",
    "trix": "^1.3.1"
  },
    "scripts": {
      "kill_esbuilds": "ps -ef |  grep -v 'grep' | grep -E 'esbuild.*(watch|ping)' | ruby -a -F\"\\s+\" -n -e 'puts \"PID:#{$F[1]}, PPID:#{$F[2]}:#{$F.slice((7..))}\"; system(\"kill -HUP #{$F[1]}\")'",
      "show_esbuilds": "ps -ef |  grep -v 'grep' | grep -E 'esbuild.*(watch|ping)' | ruby -a -F\"\\s+\" -n -e 'puts \"PID:#{$F[1]}, PPID:#{$F[2]}:#{$F.slice((7..))}\"'",
      "build": "node esbuild.config.js",
      "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  }
}
